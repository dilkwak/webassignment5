<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Project</title>
    <link rel="stylesheet" href="/css/main.css" />
</head>
<body>
    <div class="navbar bg-base-100">
        <div class="flex-1">
            <a href="/" class="btn btn-ghost text-xl">Climate Solutions</a>
        </div>
        <%- include('partials/navbar', { page: '/solutions/addProject' }) %>
    </div>

    <div class="container mx-auto px-6 py-10">
        <h1 class="text-4xl font-bold mb-6 text-center">Add Project</h1>

        <form action="/solutions/addProject" method="POST" class="space-y-6">
            <!-- Title -->
            <div>
                <label for="title" class="block mb-2 text-sm font-medium">Project Title</label>
                <input type="text" id="title" name="title" required class="input input-bordered w-full" />
            </div>

            <!-- Feature Image URL -->
            <div>
                <label for="feature_img_url" class="block mb-2 text-sm font-medium">Feature Image URL</label>
                <input type="url" id="feature_img_url" name="feature_img_url" required class="input input-bordered w-full" />
            </div>

            <!-- Sector ID (Dropdown) -->
            <div>
                <label for="sector_id" class="block mb-2 text-sm font-medium">Sector</label>
                <select id="sector_id" name="sector_id" required class="select select-bordered w-full">
                    <% sectors.forEach(sector => { %>
                        <option value="<%= sector.id %>"><%= sector.sector_name %></option>
                    <% }) %>
                </select>
            </div>

            <!-- Intro Short -->
            <div>
                <label for="intro_short" class="block mb-2 text-sm font-medium">Intro</label>
                <textarea id="intro_short" name="intro_short" required class="textarea textarea-bordered w-full"></textarea>
            </div>

            <!-- Summary Short -->
            <div>
                <label for="summary_short" class="block mb-2 text-sm font-medium">Summary</label>
                <textarea id="summary_short" name="summary_short" required class="textarea textarea-bordered w-full"></textarea>
            </div>

            <!-- Impact -->
            <div>
                <label for="impact" class="block mb-2 text-sm font-medium">Impact</label>
                <textarea id="impact" name="impact" required class="textarea textarea-bordered w-full"></textarea>
            </div>

            <!-- Original Source URL -->
            <div>
                <label for="original_source_url" class="block mb-2 text-sm font-medium">Original Source URL</label>
                <input type="url" id="original_source_url" name="original_source_url" required class="input input-bordered w-full" />
            </div>

            <!-- Submit Button -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Add Project</button>
            </div>
        </form>
    </div>
</body>
</html>
