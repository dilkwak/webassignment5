<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Project</title>
    <link rel="stylesheet" href="/css/main.css" />
</head>
<body>
    <div class="navbar bg-base-100">
        <div class="flex-1">
            <a href="/" class="btn btn-ghost text-xl">Climate Solutions</a>
        </div>
        <%- include('partials/navbar', { page: '/solutions/addProject' }) %>
    </div>

    <div class="container mx-auto px-6 py-10">
        <h1 class="text-4xl font-bold mb-6 text-center">Edit Project</h1>

        <form action="/solutions/editProject" method="POST" class="space-y-6">
            <div>
                <label for="title" class="block font-medium">Title</label>
                <input type="text" name="title" id="title" required class="input input-bordered w-full" value="<%= project.title %>" />
            </div>

            <div>
                <label for="feature_img_url" class="block font-medium">Feature Image URL</label>
                <input type="url" name="feature_img_url" id="feature_img_url" required class="input input-bordered w-full" required value="<%= project.feature_img_url %>"/>
            </div>

            <div>
                <label for="sector_id" class="block font-medium">Sector</label>
                <select name="sector_id" id="sector_id" required class="select select-bordered w-full" >
                <% sectors.forEach(sector=>{ %>
                <option <%= (project.sector_id == sector.id) ? "selected" : "" %> value="<%= sector.id %>">
                    <%= sector.sector_name %>
                </option>
                <% }) %>
                </select>
            </div>

            <div>
                <label for="intro_short" class="block font-medium">Intro Short</label>
                <textarea name="intro_short" id="intro_short" required class="textarea textarea-bordered w-full" ><%= project.intro_short %></textarea>
            </div>

            <div>
                <label for="summary_short" class="block font-medium">Summary Short</label>
                <textarea name="summary_short" id="summary_short" required class="textarea textarea-bordered w-full" ><%= project.summary_short %></textarea>
            </div>

            <div>
                <label for="impact" class="block font-medium">Impact</label>
                <textarea name="impact" id="impact" required class="textarea textarea-bordered w-full"><%= project.impact %></textarea>
            </div>

            <div>
                <label for="original_source_url" class="block font-medium">Original Source URL</label>
                <input type="url" name="original_source_url" id="original_source_url" required class="input input-bordered w-full" value="<%= project.original_source_url %>"/>
            </div>

            <input type="hidden" name="id" value="<%= projectId %>">

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Edit Project</button>
            </div>
        </form>
        <a href="/solutions/deleteProject/<%= projectId %>" class="btn-error">Delete</a>
    </div>
</body>
</html>
